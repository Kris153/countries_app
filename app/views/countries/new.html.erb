<h1>Add country</h1>

<% if flash[:notice] %>
  <p style="color: green;"><%= flash[:notice] %></p>
<% end %>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>

<%= form_with model: @country, local: true do |f| %>
  <div>
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.submit "Add" %>
  </div>
  <%= link_to "See all countries", countries_path %>
<% end %>